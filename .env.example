# Database connection string
DATABASE_URL="postgresql://user:password@host:port/database_name?sslmode=require"

# Stripe API keys (format: sk_test_... or sk_live_...)
STRIPE_SECRET_KEY="sk_test_1234567890abcdef..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_1234567890abcdef..."

# Cloudflare R2 credentials
R2_ACCESS_KEY_ID="20-character-key"
R2_SECRET_ACCESS_KEY="40-character-secret-key"
R2_ACCOUNT_ID="32-character-account-id"
R2_REGION="auto"
R2_IMAGE_BUCKET_NAME="your-public-image-bucket"
R2_BLOG_IMG_BUCKET_NAME="your-blog-image-bucket"
R2_ABOUT_IMG_BUCKET_NAME="your-about-image-bucket"
R2_CUSTOM_IMG_BUCKET_NAME="your-custom-image-bucket"
R2_FILES_BUCKET_NAME="your-files-bucket"

# Resend API key (format: re_...)
RESEND_API_KEY="re_123456789abcdef..."

# Vercel Edge Config URL
EDGE_CONFIG="https://edge-config.vercel.com/your-project-id/main"

# Feature flags secret (32+ characters recommended)
# Generate with: openssl rand -base64 32
FLAGS_SECRET="your-32-character-minimum-secret"

# JWT configuration
# Generate with: openssl rand -base64 32
JWT_SECRET="your-strong-secret-key-min-32-chars"
JWT_EXPIRATION_HOURS="720"

GOOGLE_GENERATIVE_AI_API_KEY="your_google_ai_api_key_here"

# Application URL
SITE_URL="http://localhost:3000"

# This should be an inbox you monitor regularly
ADMIN_EMAIL="you@yourdomain.com"

# Cron job authentication secret (generate with: openssl rand -base64 32)
CRON_SECRET="your-cron-secret-key-here"